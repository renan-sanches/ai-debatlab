# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_debatelab

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT/Session
JWT_SECRET=your-secret-key-min-32-chars

# AI Model API
OPENROUTER_API_KEY=your-openrouter-api-key

# Encryption
ENCRYPTION_KEY=your-encryption-key

# Vite Build-time Environment Variables (required for client build)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_APP_ID=ai-debatelab

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Development Mode (bypasses authentication for testing)
# DEV_MODE=true

# Optional: OAuth Configuration
# OAUTH_SERVER_URL=https://your-oauth-server.com
# OWNER_OPEN_ID=your-owner-id

# Optional: Built-in Forge API
# BUILT_IN_FORGE_API_URL=https://api.example.com
# BUILT_IN_FORGE_API_KEY=your-api-key

# Optional: Analytics
# VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
# VITE_ANALYTICS_WEBSITE_ID=your-website-id
