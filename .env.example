# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_debatelab

# Firebase Configuration (Server - Service Account)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# Firebase Configuration (Client)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# JWT/Session
JWT_SECRET=your-secret-key-min-32-chars

# AI Model API
OPENROUTER_API_KEY=your-openrouter-api-key

# Encryption
ENCRYPTION_KEY=your-encryption-key

# Vite Build-time Environment Variables (required for client build)
VITE_APP_ID=ai-debatelab

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Development Mode (bypasses authentication for testing)
# DEV_MODE=true

# Optional: OAuth Configuration
# OAUTH_SERVER_URL=https://your-oauth-server.com
# OWNER_OPEN_ID=your-owner-id

# Optional: Built-in Forge API
# BUILT_IN_FORGE_API_URL=https://api.example.com
# BUILT_IN_FORGE_API_KEY=your-api-key

# Optional: Analytics
# VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
# VITE_ANALYTICS_WEBSITE_ID=your-website-id
